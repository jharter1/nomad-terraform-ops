# Example Terraform variables file
# Copy this to terraform.tfvars and modify as needed

# AWS region where you want to deploy the instances
aws_region = "us-west-2"

# Instance type for the Nomad nodes
# t3.medium: 2 vCPU, 4GB RAM (good for testing)
# t3.large: 2 vCPU, 8GB RAM (better for heavier workloads)
# t3.xlarge: 4 vCPU, 16GB RAM (for production-like testing)
instance_type = "t3.medium"

# Number of instances to create
instance_count = 6

# CIDR block allowed to SSH to instances
# For security, replace with your actual IP range
# You can get your IP with: curl ifconfig.me
allowed_ssh_cidr = "0.0.0.0/0"  # Change this to your IP for better security

# Project name for resource tagging
project_name = "nomad-testing"

# Environment name
environment = "testing"
